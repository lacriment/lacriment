class EncyclopaediaController < ApplicationController
  before_action :set_encyclopaedium, only: [:show, :edit, :update, :destroy]

  # GET /encyclopaedia
  # GET /encyclopaedia.json
  def index
    @encyclopaedia = Encyclopaedium.all
  end

  # GET /encyclopaedia/1
  # GET /encyclopaedia/1.json
  def show
  end

  # GET /encyclopaedia/new
  def new
    @encyclopaedium = Encyclopaedium.new
  end

  # GET /encyclopaedia/1/edit
  def edit
  end

  # POST /encyclopaedia
  # POST /encyclopaedia.json
  def create
    @encyclopaedium = Encyclopaedium.new(encyclopaedium_params)

    respond_to do |format|
      if @encyclopaedium.save
        format.html { redirect_to @encyclopaedium, notice: 'Encyclopaedium was successfully created.' }
        format.json { render :show, status: :created, location: @encyclopaedium }
      else
        format.html { render :new }
        format.json { render json: @encyclopaedium.errors, status: :unprocessable_entity }
      end
    end
  end

  # PATCH/PUT /encyclopaedia/1
  # PATCH/PUT /encyclopaedia/1.json
  def update
    respond_to do |format|
      if @encyclopaedium.update(encyclopaedium_params)
        format.html { redirect_to @encyclopaedium, notice: 'Encyclopaedium was successfully updated.' }
        format.json { render :show, status: :ok, location: @encyclopaedium }
      else
        format.html { render :edit }
        format.json { render json: @encyclopaedium.errors, status: :unprocessable_entity }
      end
    end
  end

  # DELETE /encyclopaedia/1
  # DELETE /encyclopaedia/1.json
  def destroy
    @encyclopaedium.destroy
    respond_to do |format|
      format.html { redirect_to encyclopaedia_url, notice: 'Encyclopaedium was successfully destroyed.' }
      format.json { head :no_content }
    end
  end

  private
    # Use callbacks to share common setup or constraints between actions.
    def set_encyclopaedium
      @encyclopaedium = Encyclopaedium.find(params[:id])
    end

    # Never trust parameters from the scary internet, only allow the white list through.
    def encyclopaedium_params
      params.require(:encyclopaedium).permit(:title, :body)
    end
end

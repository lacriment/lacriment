<%= form_for @comment do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h3>Kaydetme esnasında karşılaşılan <%= @comment.errors.count %> sorun şunlar:</h3>
      <% @comment.errors.full_messages.each do |message| %>
        <p>
          <%= message %>
        </p>
      <% end %>
    </div>
  <% end %>
  <div class="form-group">
    <div class="field">
      <%= f.text_field :name, placeholder: 'isim', class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.email_field :email, placeholder: 'ornek@eposta.com (gözükmeyecek)', class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.text_area :body, placeholder: 'yorum', rows: 5, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.hidden_field :article_id %>
    </div>
    <div class="field">
      <%= f.submit 'Kaydet', class: 'btn btn-lg btn-primary btn-block' %>
    </div>
  </div>
<% end %>
